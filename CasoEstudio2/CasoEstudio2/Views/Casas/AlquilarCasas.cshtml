@model CasoEstudio2.Entities.CasasEnt

@{
    ViewBag.Title = "AlquilarCasas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <center><h4 class="card-title">Alquilar</h4></center>

            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-info" role="alert" style="text-align:center">
                    @ViewBag.ErrorMessage
                </div>
            }
            else
            {
                using (Html.BeginForm("AlquilarCasas", "Casas", FormMethod.Post))
                {
                    <div class="row">
                        <div class="col-md-4" style="margin-bottom: 10px;">
                            <h4 style="margin-bottom: 0;">Compra</h4>
                        </div>
                        <div class="col-md-4 text-center">
                            @{
                                var listaDesplegable = ViewBag.Dropdown as List<SelectListItem> ?? new List<SelectListItem>();
                                listaDesplegable.Insert(0, new SelectListItem { Text = "Seleccione", Value = "" });
                            }
                            <div class="dropdown">
                                @Html.DropDownListFor(m => m.IdCasa, ViewBag.Dropdown as List<SelectListItem>, new { @class = "btn btn-secondary dropdown-toggle", @placeholder = "Seleccione Casa", @style = "color: black;", @id = "IdCasa", })
                            </div>
                        </div>


                    </div>

                    <!-- Precio -->
                    <div class="form-group row" style="margin-top: 20px;">
                        <label for="exampleInputUsername2" class="col-sm-2 col-form-label text-sm-right">Precio de la Casa</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" id="exampleInputUsername2" name="saldoAnterior" placeholder="Precio..." readonly style="background-color: #f8f9fa; color: #495057; pointer-events: none; border: 1px solid #ced4da;">
                        </div>
                    </div>



                    <!-- Usuario -->
                    <div class="form-group row" style="margin-top: 20px;">
                        <label for="exampleInputUsername2" class="col-sm-2 col-form-label text-sm-right">Nombre del usuario</label>
                        <div class="col-sm-4">
                            @Html.TextBoxFor(m => m.UsuarioAlquiler, new { @class = "form-control", @id = "Usuario", @placeholder = "Nombre...", @required = "required" })
                            <div id="mensajeError" style="color: red; display: none;">Ingrese un nombre válido</div>
                        </div>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary btn-abonar" id="btnAbonar">Alquilar</button>
                    </div>
                }
            }





        </div>
    </div>
</div>

