@model List<CasoEstudio2.Entities.CasasEnt>

@{
    ViewBag.Title = "ConsultarCasas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <center><h4 class="card-title">Consultar Casas</h4></center>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                Descripción
                            </th>
                            <th>
                                Precio
                            </th>
                            <th>
                                Usuario
                            </th>
                            <th>
                                Estado
                            </th>
                            <th>
                                Fecha de alquiler
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.DescripcionCasa</td>
                                <td>@item.PrecioCasa</td>
                                @if (item.UsuarioAlquiler != "")
                                {
                                    <td>@item.UsuarioAlquiler</td>
                                }
                                else
                                {
                                    <td>Sin Ocupar</td>
                                }
                                @if (item.UsuarioAlquiler != "")
                                {
                                    <td>Reservada</td>
                                }
                                else
                                {
                                    <td>Disponible</td>
                                }
                                @if (item.FechaAlquiler != DateTime.MinValue)
                                {
                                    <td>@item.FechaAlquilerFormateada</td>
                                }
                                else
                                {
                                    <td>Sin Ocupar</td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

